{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} /
                <a href="{{ path("category_show", { "categorySlug" : category.name }) }}">{{ category.name }}</a></h2>
        </div>
    {% else %}
        Aucune categorie trouvée.
    {% endfor %}

    <a href="{{ path('program_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
